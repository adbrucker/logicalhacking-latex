\newcommand{\setbeamercolortitlelight}{%
  \setbeamercolor{title}{fg=lhWhite}
  \setbeamercolor{subtitle}{fg=lhWhite}
  \setbeamercolor{author}{fg=lhWhite}
  \setbeamercolor{institute}{fg=lhWhite}
