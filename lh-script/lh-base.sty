\newcommand{\lh@classification@text}[1]{%
  \ifcase\number#1\relax% strictly confidential
    \alert{\lh@strictlyconfidential}%
  \or% confidential
    \alert{\lh@confidential}%
  \or% internal
    \alert{\lh@internal}%
  \or% customer
    \lh@customer%
  \or% student
    \lh@student%
  \or% public
    \lh@public~(\lh@CCBYNCND)%
  \or
    \lh@public~(\lh@CCBYND)%
  \or
    \lh@public~(\lh@CCBY)%
  \or
    \lh@public~(\lh@CCzero)%
  \or
    \lh@public~(\lh@GFDL)%
  \else
    UNDEFINED~CLASSIFICATION:~#1%
  \fi%
}
